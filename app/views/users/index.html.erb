<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="row">
<div class="col-md-8">
<div id="map" ></div>
</div>

<div class="col-md-4">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :latitude, :class => "form-control", :placeholder => "Latitude" %>
  </div>
  <div class="field">
    <%= f.text_field :longitude, :class => "form-control", :placeholder => "Longitude"  %>
  </div>
  <div class="field">
    <%= f.text_field :address, :class => "form-control", :placeholder => "Address"  %>
  </div>
  <div class="field">
    <%= f.text_area :description, :class => "form-control", :rows => 5, :placeholder => "Description"  %>
  </div>
  <div class="field">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Title"  %>
  </div>
  <div class="actions">
    <%= f.submit "Create Worksite", :class => "btn btn-lg btn-block btn-success" %>
  </div>
<% end %>

</div>

<div class="row">
  <div class="col-md-12">
  <br /> 
  <table class="table table-striped">
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th></th>
      <th></th>
    </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= user.latitude %></td>
      <td><%= user.longitude %></td>
      <td><%= user.address %></td>
      <td><%= user.description %></td>
      <td><%= user.title %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
  </div>
</div>
<ol class='tourbus-legs' id='my-tour-id'>

  <li data-orientation='centered'>
    <h2>This is a modal-like tour leg</h2>
    <p>It isn't attached to a specific element.</p>
    <a href='javascript:void(0);' class='tourbus-next'>Next...</a>
  </li>

  <li data-el='#nav' data-orientation='left' data-width='400'>
    <h2>Navigation</h2>
    <p>Here's where I explain how our navigation works...</p>
    <a href='javascript:void(0);' class='tourbus-next'>Next...</a>
  </li>

  <li data-el='#sell' data-orientation='bottom' data-width='300'>
    <p>Buy now, etc, etc</p>
    <a href='javascript:void(0);' class='tourbus-stop'>Done!</a>
  </li>

</ol>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers); handler.fitMapToBounds(); }); 

</script>
