<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="row">
<div class="<% user_signed_in? ? 'col-md-8' : 'col-md-12' %>" data-step="3" data-intro="This is where you'll see the pinned address of the worksite in google maps" data-position="right">
<div id="map" ></div>
</div>

<div class="col-md-4" data-step="1" data-intro="This is where you input the address and description of the worksite" data-position="left">
<% if user_signed_in? %>
<%= form_for @worksite, url: worksites_path, html: { multipart: true } do |f| %>
  <% if @worksite.errors.any? %> <div id="error_explanation">
      <h2><%= pluralize(@worksite.errors.count, "error") %> prohibited this worksite from being saved:</h2>

      <ul>
      <% @worksite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :latitude, :class => "form-control", :placeholder => "Latitude" %>
  </div>
  <div class="field">
    <%= f.text_field :longitude, :class => "form-control", :placeholder => "Longitude"  %>
  </div>
  <div class="field">
    <%= f.text_field :address, :class => "form-control", :placeholder => "Address"  %>
  </div>
  <div class="field">
    <%= f.text_area :description, :class => "form-control", :rows => 5, :placeholder => "Description"  %>
  </div>
  <div class="field">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Title"  %>
  </div>
  <div class="field">
    <%#= f.file_field :exel, :class => "form-control"  %>
    Uploading of Excel or CSV coming soon ....
  </div>
  <div class="actions">
    <%= f.submit "Create Worksite", :class => "btn btn-lg btn-block btn-success" %>
  </div>
<% end %>
<% end %>

</div>

<div class="row" >
  <div class="col-md-12"data-step="2" data-intro="This is where the list of worksite will be listed" data-position="top">
  <br /> 
  <table class="table table-striped">
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <% if user_signed_in? %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  
  <% @worksites.each do |worksite| %>
    <tr>
      <td><%= worksite.latitude %></td>
      <td><%= worksite.longitude %></td>
      <td><%= worksite.address %></td>
      <td><%= worksite.description %></td>
      <td><%= worksite.title %></td>
      <% if user_signed_in? %>
      <td><%= link_to 'Edit', edit_worksite_path(worksite) %></td>
      <td><%= link_to 'Destroy', worksite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers(<%=raw @hash.to_json %>);
handler.bounds.extendWith(markers); handler.fitMapToBounds(); }); 
$(function(){
  $('#walkthrough').click(function(){
    introJs().start();
  });
});
</script>
